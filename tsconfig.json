{
  "compilerOptions": {
    "target": "ES2018", // 使用 ES2018 目标以支持正则表达式 s 标志
    "lib": ["dom", "dom.iterable", "esnext"], // 使用 DOM 和 ESNext 库
    "allowJs": true, // 允许使用 JavaScript 文件
    "skipLibCheck": true, // 跳过库文件检查
    "strict": true, // 启用所有严格类型检查选项
    "noEmit": true, // 禁用输出文件
    "esModuleInterop": true, // 启用 ES 模块互操作性
    "module": "esnext", // 使用 ESNext 模块系统
    "moduleResolution": "bundler", // bundler：现代、灵活，适合前端项目（Next.js、Vite 等）；node：传统、严格，适合纯 Node.js 后端项目
    "resolveJsonModule": true, // 启用 JSON 模块解析
    "isolatedModules": true, // 启用模块隔离
    "jsx": "react-jsx", // 保留 JSX 语法
    "incremental": true, // 增量编译
    "types": ["vitest/globals"], // 添加 Vitest 全局类型支持
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "types/global.d.ts",
    "types/vitest.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ], // 包含的文件
  "exclude": ["node_modules"] // 排除 node_modules 目录
}
